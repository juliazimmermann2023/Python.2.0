def calcular_media_notas():
    n = int(input("Quantas notas você deseja calcular a média? "))
    
    notas = []
    
    for i in range(n):
        nota = float(input(f"Informe a nota {i + 1}: "))
        notas.append(nota)
    
    if n > 0:
        media = sum(notas) / n
    else:
        media = 0
    
    print(f"A média das {n} notas é: {media:.2f}")

calcular_media_notas()
